{
  "name": "@n24q02m/mnemo-plugin",
  "keywords": [
    "opencode",
    "claude-code",
    "mcp",
    "memory",
    "plugin",
    "mnemo"
  ],
  "version": "1.3.0",
  "license": "MIT",
  "type": "module",
  "packageManager": "bun@1.2.18",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --build && node scripts/build-cli.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest --passWithNoTests",
    "test:watch": "vitest watch",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "tsc --noEmit",
    "check": "biome check . && bun run type-check",
    "check:fix": "biome check --write . && bun run type-check",
    "prepublishOnly": "bun run build"
  },
  "bin": {
    "mnemo-plugin": "bin/cli.mjs"
  },
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.2.0"
  },
  "files": [
    "build/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@opencode-ai/plugin": "^1.2.10",
    "@opencode-ai/sdk": "^1.2.10",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "esbuild": "^0.25.12",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "description": "Universal Memory Plugin for OpenCode & Claude Code (Powered by mnemo-mcp)",
  "main": "build/src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/n24q02m/mnemo-plugin.git"
  },
  "author": "n24q02m",
  "bugs": {
    "url": "https://github.com/n24q02m/mnemo-plugin/issues"
  },
  "homepage": "https://github.com/n24q02m/mnemo-plugin#readme",
  "omp": {
    "tools": "build/src/platforms/omp/index.js"
  }
}
