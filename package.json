{
  "name": "@n24q02m/mnemo-plugin",
  "version": "0.0.0",
  "description": "Universal Memory Plugin for OpenCode & Claude Code (Powered by mnemo-mcp)",
  "type": "module",
  "main": "build/src/index.js",
  "bin": {
    "mnemo-plugin": "bin/cli.mjs"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "tsc --build && node scripts/build-cli.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest --passWithNoTests",
    "test:watch": "vitest watch",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "tsc --noEmit",
    "check": "biome check . && pnpm type-check",
    "check:fix": "biome check --write . && pnpm type-check",
    "clean": "rm -rf build bin",
    "prepublishOnly": "pnpm build"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": ["build/", "bin/", "README.md", "LICENSE"],
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@opencode-ai/plugin": "^1.2.10",
    "@opencode-ai/sdk": "^1.2.10",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^2.1.4",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/n24q02m/opencode-plugin-mnemo.git"
  },
  "author": "n24q02m",
  "license": "MIT",
  "keywords": ["opencode", "claude-code", "mcp", "memory", "plugin", "mnemo"],
  "bugs": {
    "url": "https://github.com/n24q02m/opencode-plugin-mnemo/issues"
  },
  "homepage": "https://github.com/n24q02m/opencode-plugin-mnemo#readme"
}
